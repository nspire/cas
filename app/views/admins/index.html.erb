<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<div class="admins index"> 
	<h2>Admins</h2>
	<%= link_to("Add New Admin", {:action => 'new'}, :class => "action new") %>

	<table class="listing" summary="Admin list">
		<tr class="header">
			<th>First Name</th>
			<th>Last Name</th>
			<th>Organization</th>
			<th>Email</th>
			<th>User Limit</th>
			<th>Actions</th>
		</tr>
		<% @admins.each do |admin| %>
		<tr>
			<td><%= admin.fname %></td>
			<td><%= admin.lname %></td>
			<td><%= admin.organization %></td>
			<td><%= admin.email %></td>
			<td><%= admin.user_limit %></td>
			<td><%= link_to("Show", { :action => 'show', :id => admin.id }, :class => "action show") %>
			<%= link_to("Edit", { :action => 'edit', :id => admin.id }, :class => "action edit") %>
			<%= link_to("Delete", { :action => 'delete', :id => admin.id }, :class => "action delete") %></td>
		</tr>
		<% end %>
	</table>
</div>